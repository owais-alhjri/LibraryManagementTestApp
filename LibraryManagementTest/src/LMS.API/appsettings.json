{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD}"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "JwtSettings": {
    "Issuer": "LMS.API",
    "Audience": "LMS.API",
    "SecretKey": "DEFAULT_DEV_SECRET_KEY_1234567890123456",
    "ExpirationMinutes": 60
  },

  "AllowedHosts": "*"
}
